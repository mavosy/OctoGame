<Window x:Class="SUP23_G9.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:SUP23_G9.ViewModels"
        xmlns:local="clr-namespace:SUP23_G9.Views"
        d:DataContext="{d:DesignInstance vm:MainViewModel}"
        mc:Ignorable="d"
        Title="MainWindow" Height="{Binding defaultWindowHeight}" Width="{Binding defaultWindowWidth}"
        SizeChanged="MainWindow_SizeChanged"
        >
    
    <!--<Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>-->

    <Grid Background="PaleTurquoise">

        <ContentControl 
            Content="{Binding CurrentViewModel}"
            VerticalAlignment="Stretch"
            HorizontalAlignment="Stretch"/>
    </Grid>
</Window>
