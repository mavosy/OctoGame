<UserControl x:Class="SUP23_G9.Views.GameView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SUP23_G9.ViewModels"
             xmlns:local="clr-namespace:SUP23_G9.Views"
             d:DataContext="{d:DesignInstance vm:GameViewModel}"
             xmlns:character="clr-namespace:SUP23_G9.Views.Characters"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Border
        Background="White"
        BorderBrush="DarkTurquoise"
        BorderThickness="5"
        CornerRadius="5">
        <Grid>
            <ItemsControl ItemsSource="{Binding Player2.Ocean}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <UniformGrid Columns="10" Rows="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                </ItemsControl>
            <Canvas Name="gameArea">
                <Image 
                    Name="player" 
                    Source="/SUP23_G9;component/Views/Components/Images/Happy_Kraken_Left.bmp" 
                    Width="50" 
                    Height="50" 
                    Canvas.Left="350" 
                    Canvas.Top="230" 
                    Focusable="True" 
                    KeyDown="player_KeyDown" 
                    KeyUp="player_KeyUp"/>
            
                <Image 
                    Name="pirateShip1" 
                    Source="/SUP23_G9;component/Views/Components/Images/PirateShip1_Left.bmp" 
                    Width="50" 
                    Height="50" 
                    Canvas.Left="150" 
                    Canvas.Top="30"/>
            
                <Image Name="pirateShip2" 
                    Source="/SUP23_G9;component/Views/Components/Images/PirateShip1_Right.bmp" 
                    Width="50" 
                    Height="50" 
                    Canvas.Left="350" 
                    Canvas.Top="150"/>
            
                <Image Name="pirateShip3" 
                    Source="/SUP23_G9;component/Views/Components/Images/PirateShip1_Left.bmp" 
                    Width="50" 
                    Height="50" 
                    Canvas.Left="550" 
                    Canvas.Top="300"/>
            
            <!--Ett försök att använda en user control istället. Gick sådär.-->
            <!--<character:PlayerCharacter 
                x:Name="playerC" 
                Width="100" 
                Height="100" 
                Canvas.Left="{Binding LeftCoordinates}" 
                Canvas.Top="{Binding RightCoordinates}" 
                BorderBrush="Black" 
                BorderThickness="5" 
                Visibility="Hidden"/>-->
            
                          
        
            </Canvas>
        </Grid>
    </Border>
</UserControl>
