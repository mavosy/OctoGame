<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:vm="clr-namespace:SUP23_G9.ViewModels"
             xmlns:local="clr-namespace:SUP23_G9.Views"
             xmlns:Characters="clr-namespace:SUP23_G9.Views.Characters"
             x:Class="SUP23_G9.Views.GameView"
             d:DataContext="{d:DesignInstance {x:Type vm:GameViewModel}}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <Border
        Background="White"
        BorderBrush="DarkTurquoise"
        BorderThickness="5"
        CornerRadius="5">

        <Grid>
            <!--Rutnät -->
            <ItemsControl ItemsSource="{Binding Ocean}" >
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="10" Rows="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Canvas x:Name="gameArea">
                <Image 
                    x:Name="player"
                    Source="/SUP23_G9;component/Views/Components/Images/Happy_Kraken_Left.bmp" 
                    Width="50"
                    Height="50"
                    Canvas.Left="682"
                    Canvas.Top="195">
                    <!--Focusable="True"-->
                    <!--Loaded="player_Loaded"--><!--
                    KeyDown="player_KeyDown"
                    KeyUp="player_KeyUp">-->
                    <!--<Image.InputBindings>
                        <KeyBinding Key="Enter" Command="{Binding SearchCommand}" CommandParameter="{Binding Path=Source, RelativeSource={RelativeSource AncestorType={x:Type Image}}}" />
                    </Image.InputBindings>-->
                </Image>

                <Image 
                    x:Name="pirateShip1" 
                    Source="/SUP23_G9;component/Views/Components/Images/PirateShip1_Left.bmp" 
                    Width="50" 
                    Height="50" 
                    Canvas.Left="150" 
                    Canvas.Top="30"/>

                <Image x:Name="pirateShip2" 
                    Source="/SUP23_G9;component/Views/Components/Images/PirateShip1_Right.bmp" 
                    Width="50" 
                    Height="50" 
                    Canvas.Left="350" 
                    Canvas.Top="150"/>

                <Image x:Name="pirateShip3" 
                    Source="/SUP23_G9;component/Views/Components/Images/PirateShip1_Left.bmp" 
                    Width="50" 
                    Height="50" 
                    Canvas.Left="550" 
                    Canvas.Top="300"/>
                <Characters:Player x:Name="kraken"/>
                <Characters:Ship x:Name="shippy" Canvas.Left="150" Canvas.Top="245"/>
                <Characters:Obstacle Canvas.Left="329" Canvas.Top="331"/>
            </Canvas>
        </Grid>
    </Border>
</UserControl>
