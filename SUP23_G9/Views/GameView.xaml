<UserControl
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SUP23_G9.Views"
             xmlns:Mobs="clr-namespace:SUP23_G9.Views.Mobs" xmlns:Characters="clr-namespace:SUP23_G9.Views.Characters" x:Class="SUP23_G9.Views.GameView"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas x:Name="myCanvas" Background="LightBlue" >

        <!-- Spelare -->
        <Rectangle x:Name="player" Height="50" Width="50" Fill="red" Canvas.Left="375" Canvas.Top="200" Focusable="True" KeyDown="KeyIsDown" KeyUp="KeyIsUp" />

        <!-- Skepp -->
        <Characters:Ship x:Name="mob" Tag="mob" Canvas.Left="68" Canvas.Top="65"/>
        <Characters:Ship x:Name="mob2" Tag="mob" Canvas.Left="170" Canvas.Top="309"/>
        <Characters:Ship x:Name="mob3" Tag="mob" Canvas.Left="491" Canvas.Top="65"/>
        <Characters:Ship x:Name="mob4" Tag="mob" Canvas.Left="666" Canvas.Top="309" HorizontalAlignment="Left" VerticalAlignment="Top"/>

        <Characters:Ship x:Name="mob5" Tag="mob" Canvas.Left="491" Canvas.Top="359"/>
        <Characters:Ship x:Name="mob6" Tag="mob" Canvas.Left="338" Canvas.Top="90"/>
        <Characters:Ship x:Name="mob7" Tag="mob" Canvas.Left="712" Canvas.Top="40"/>
        <Characters:Ship x:Name="mob8" Tag="mob" Canvas.Left="32" Canvas.Top="220"/>

        <!-- Hinder -->
        <Characters:Obstacle x:Name="evilmob" Tag="evilmob" Canvas.Left="207" Canvas.Top="175"/>
        <Characters:Obstacle x:Name="evilmob2" Tag="evilmob" Canvas.Left="575" Canvas.Top="175"/>
        <Characters:Obstacle x:Name="evilmob3" Tag="evilmob" Canvas.Left="43" Canvas.Top="375"/>

        <Rectangle Fill="white" Height="45" Canvas.Left="10" Stroke="Black" Canvas.Top="15" Width="165" HorizontalAlignment="Left" VerticalAlignment="Center" Opacity="0.6"/>

        <Rectangle Fill="white" Height="45" Canvas.Left="9" Stroke="Black" Canvas.Top="70" Width="166" HorizontalAlignment="Left" VerticalAlignment="Top" Opacity="0.6"/>

        <!-- Poäng tavla -->
        <Label x:Name="scoreBoard" Content="Poäng:" Canvas.Left="10" Canvas.Top="10" HorizontalAlignment="Left" VerticalAlignment="Center" Height="50" Width="165" FontSize="18" FontWeight="Bold"/>

        <!-- Start meny -->
        <TextBlock x:Name="startMenu" Background="#FF10D4B8" Canvas.Left="290" TextWrapping="Wrap" Text="" Canvas.Top="141" Height="129" Width="234" FontSize="48" FontWeight="Bold" TextAlignment="Center" HorizontalAlignment="Center" VerticalAlignment="Top" Visibility="Hidden" />


    </Canvas>
</UserControl>
