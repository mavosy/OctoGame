<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:vm="clr-namespace:SUP23_G9.ViewModels"
    xmlns:local="clr-namespace:SUP23_G9.Views"
    xmlns:Characters="clr-namespace:SUP23_G9.Views.Characters"
    x:Class="SUP23_G9.Views.GameView"
    d:DataContext="{d:DesignInstance {x:Type vm:GameViewModel}}"
    mc:Ignorable="d"
    d:DesignHeight="450" d:DesignWidth="800">

    <Border Background="PaleTurquoise"
            BorderBrush="DarkTurquoise"
            BorderThickness="5"
            CornerRadius="5">

        <Grid>
            <!--Rutnät -->
            <ItemsControl ItemsSource="{Binding Ocean}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid Columns="10" Rows="10" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <Canvas x:Name="gameArea" Height="450" Width="800">
                <Characters:Player x:Name="kraken" />
                <Characters:Obstacle Canvas.Left="266" Canvas.Top="{Binding ShipTopCoordinates[1]}" />
                <Characters:Ship Canvas.Left="439" Canvas.Top="{Binding ShipTopCoordinates[2]}" />
                <Characters:Ship Canvas.Left="624" Canvas.Top="{Binding ShipTopCoordinates[3]}" />
                <Characters:Ship Canvas.Left="28" Canvas.Top="{Binding ShipTopCoordinates[5]}" />
            </Canvas>
        </Grid>
    </Border>
</UserControl>
